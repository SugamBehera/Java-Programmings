import java.util.Scanner;

public class Exercise {
	public static void main(String[] args) {
		int choice ;
		System.out.println("Pick one :\n1. Hello\n2. Hi\n3. Hey\t ");
		try (Scanner s = new Scanner(System.in)) {
			choice = s.nextInt();
		}
		switch(choice)
        {
         case 1: System.out.println("You said Hello");
	              break;
         case 2: System.out.println("You said Hi");
	               break;
          case 3: System.out.println("You said Hey");
	               break;
          case 4: System.out.println("invalid Choice");
}
		
	}

}
